## Include this file in the top-level Makefile with an include
## directive.

lib_LTLIBRARIES += \
    thornsds_db1/libthornsds_db1.la

bin_PROGRAMS += \
    thornsds_db1/examples/db1_to_image \
    thornsds_db1/examples/db1_to_netcdf

thornsds_db1_includedir = \
    $(includedir)/thornsds_db1
thornsds_db1_include_HEADERS = \
    thornsds_db1/thornsds_db1.h

# CURRENT:REVISION:AGE
# - library source changed -> inc REVISION
# - interfaces added/removed/changed -> inc CURRENT, REVISION = 0
# - interfaces added -> inc AGE
# - interfaces removed -> AGE = 0
thornsds_db1_libthornsds_db1_la_SOURCES = \
    thornsds_db1/thornsds_db1.cpp

thornsds_db1_examples_db1_to_image_CPPFLAGS = \
    $(MAGICKPP_CFLAGS) \
    -I$(top_srcdir)/iniparser

thornsds_db1_examples_db1_to_netcdf_CPPFLAGS = \
    -I$(top_srcdir)/iniparser

thornsds_db1_examples_db1_to_image_LDADD = \
    thornsds_db1/libthornsds_db1.la \
    -lMagick++
thornsds_db1_examples_db1_to_image_SOURCES = \
    thornsds_db1/examples/db1_to_image.cpp \
    iniparser/iniparser.c

thornsds_db1_examples_db1_to_netcdf_LDADD = \
    thornsds_db1/libthornsds_db1.la \
    -lnetcdf_c++ \
    -lnetcdf
thornsds_db1_examples_db1_to_netcdf_SOURCES = \
    thornsds_db1/examples/db1_to_netcdf.cpp \
    iniparser/iniparser.c

