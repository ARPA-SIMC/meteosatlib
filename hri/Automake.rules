## Include this file in the top-level Makefile.am with an include
## directive.

lib_LTLIBRARIES += \
    hri/libhri.la

bin_PROGRAMS += \
    hri/examples/HRI2NetCDF

hri_includedir = \
    $(includedir)/hri
hri_include_HEADERS = \
    hri/HRI.h \
    hri/HRI_geolocation.h \
    hri/HRI_image.h \
    hri/HRI_machine.h \
    hri/HRI_subframe_identification.h \
    hri/HRI_subframe_interpretation.h \
    hri/HRI_subframe_keyslot.h \
    hri/HRI_subframe_label.h

# have libhri depend on netcdf*.so, if available
hri_libhri_la_LIBADD = $(NETCDF_LIBS)
hri_libhri_la_CPPFLAGS = $(NETCDF_CFLAGS)

# CURRENT:REVISION:AGE
# - library source changed -> inc REVISION
# - interfaces added/removed/changed -> inc CURRENT, REVISION = 0
# - interfaces added -> inc AGE
# - interfaces removed -> AGE = 0
hri_libhri_la_SOURCES = \
    hri/HRI.cpp \
    hri/HRI_image.cpp \
    hri/HRI_machine.cpp \
    hri/HRI_subframe_identification.cpp \
    hri/HRI_subframe_interpretation.cpp \
    hri/HRI_subframe_keyslot.cpp \
    hri/HRI_subframe_label.cpp

# in case only netcdf*.a is available
hri_examples_HRI2NetCDF_LDFLAGS = $(NETCDF_LIBS)
hri_examples_HRI2NetCDF_LDADD = \
    hri/libhri.la
hri_examples_HRI2NetCDF_CPPFLAGS = $(NETCDF_CFLAGS)
hri_examples_HRI2NetCDF_SOURCES = \
    hri/examples/HRI2NetCDF.cpp

