lib_LTLIBRARIES += \
    openmtp/libopenmtp.la

bin_PROGRAMS += \
    openmtp/examples/OpenMTP_info

openmtp_includedir = \
    $(includedir)/openmtp
openmtp_include_HEADERS = \
    openmtp/OpenMTP_ascii_header.h \
    openmtp/OpenMTP_binary_header.h \
    openmtp/OpenMTP.h \
    openmtp/OpenMTP_image.h \
    openmtp/OpenMTP_image_line.h \
    openmtp/OpenMTP_machine.h

# CURRENT:REVISION:AGE
# - library source changed -> inc REVISION
# - interfaces added/removed/changed -> inc CURRENT, REVISION = 0
# - interfaces added -> inc AGE
# - interfaces removed -> AGE = 0
openmtp_libopenmtp_la_SOURCES = \
    openmtp/OpenMTP_ascii_header.cpp \
    openmtp/OpenMTP_binary_header.cpp \
    openmtp/OpenMTP.cpp \
    openmtp/OpenMTP_image.cpp \
    openmtp/OpenMTP_image_line.cpp \
    openmtp/OpenMTP_machine.cpp

openmtp_examples_OpenMTP_info_LDADD = \
    openmtp/libopenmtp.la
openmtp_examples_OpenMTP_info_SOURCES = \
    openmtp/examples/OpenMTP_info.cc

if HAVE_NETCDF
bin_PROGRAMS += \
    openmtp/examples/OpenMTP_to_NetCDF

openmtp_examples_OpenMTP_to_NetCDF_LDADD = \
    openmtp/libopenmtp.la $(NETCDF_LIBS)
openmtp_examples_OpenMTP_to_NetCDF_CPPFLAGS = \
    $(NETCDF_CFLAGS)
openmtp_examples_OpenMTP_to_NetCDF_SOURCES = \
    openmtp/examples/OpenMTP_to_NetCDF.cpp
endif

