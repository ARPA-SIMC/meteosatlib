msg_native_lib = \
    msg-native/libnative.la

msg_native_bin = \
    msg-native/examples/nativedump \
    msg-native/examples/native2Image

msg-native/all: \
    $(msg_native_lib) \
    $(msg_native_bin)

lib_LTLIBRARIES += \
    $(msg_native_lib)

bin_PROGRAMS += \
    $(msg_native_bin)

nobase_include_HEADERS += \
    msg-native/MSG_native.h \
    msg-native/MSG_native_packetheader.h \
    msg-native/MSG_native_header.h \
    msg-native/MSG_native_trailer.h \
    msg-native/MSG_native_line.h

msg_native_libnative_la_CPPFLAGS = \
    -Ihrit \
    -Imsg-native

# CURRENT:REVISION:AGE
# - library source changed -> inc REVISION
# - interfaces added/removed/changed -> inc CURRENT, REVISION = 0
# - interfaces added -> inc AGE
# - interfaces removed -> AGE = 0
msg_native_libnative_la_SOURCES = \
    msg-native/MSG_native.cpp \
    msg-native/MSG_native_packetheader.cpp \
    msg-native/MSG_native_header.cpp \
    msg-native/MSG_native_trailer.cpp \
    msg-native/MSG_native_line.cpp

msg_native_examples_nativedump_LDADD = \
    hrit/libhrit.la \
    msg-native/libnative.la

msg_native_examples_nativedump_SOURCES = \
    msg-native/examples/nativedump.cpp

msg_native_examples_native2Image_LDADD = \
    -lMagick++ \
    hrit/libhrit.la \
    msg-native/libnative.la

msg_native_examples_native2Image_SOURCES = \
    msg-native/examples/native2Image.cpp

