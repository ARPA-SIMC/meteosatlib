test_bin = test/msatlib_test

test/all: $(test_bin)

noinst_PROGRAMS += $(test_bin)

noinst_HEADERS += \
	test/tut.h \
	test/tut_reporter.h \
	test/tut_restartable.h

test_msatlib_test_CPPFLAGS = \
	-I$(top_srcdir)/conv \
	-I$(top_srcdir)/grib
test_msatlib_test_LDADD = \
	hrit/libhrit.la
	-lnetcdf_c++ \
	-lnetcdf
test_msatlib_test_SOURCES = \
	test/tut-main.cpp \
	test/test-utils.cpp \
	test/test-importxrit.cpp \
	conv/ImageData.cpp \
	conv/ImportXRIT.cpp


