examples_bin = \
    examples/Met_Reproj \
    examples/msatconv

examples/all: \
    $(examples_bin)

bin_PROGRAMS += \
    $(examples_bin)

noinst_HEADERS += \
    examples/Area.h \
    examples/Proj_Geos.h \
    examples/Proj_Polar.h \
    examples/Standard.h \
    examples/Points.h \
    examples/Proj_Mercator.h \
    examples/Projection.h

examples_Met_Reproj_CPPFLAGS = \
    -I$(top_srcdir)/examples \
    -I$(top_srcdir)/grib
examples_Met_Reproj_LDADD = \
    -lnetcdf_c++ \
    -lnetcdf
examples_Met_Reproj_SOURCES = \
    examples/Area.cpp \
    examples/Met_Reproj.cpp \
    examples/Proj_Geos.cpp \
    examples/Proj_Mercator.cpp \
    examples/Proj_Polar.cpp \
    grib/Ebisuzaki.cpp \
    grib/GRIB.cpp

examples_msatconv_SOURCES = \
    grib/Ebisuzaki.cpp \
    grib/GRIB.cpp \
    conv/Image.cpp \
    conv/ImportGRIB.cpp \
    conv/ImportNetCDF.cpp \
    conv/ImportSAFH5.cpp \
    conv/ImportXRIT.cpp \
    conv/ExportGRIB.cpp \
    conv/ExportNetCDF.cpp \
    hdf5/Utils.cpp \
    examples/msatconv.cpp
examples_msatconv_CPPFLAGS = \
    -I$(top_srcdir)/grib
examples_msatconv_LDADD = \
    hrit/libhrit.la \
    -lhdf5_cpp \
    -lnetcdf_c++ \
    -lnetcdf



