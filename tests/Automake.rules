check_PROGRAMS += \
    tests/msatlib_test
dist_check_SCRIPTS += \
    tests/msatlib_test_wrap
TESTS += \
    $(dist_check_SCRIPTS)

check:

noinst_PROGRAMS += \
    $(test_bin)

noinst_HEADERS += \
    tests/tut.h \
    tests/tut_reporter.h \
    tests/tut_restartable.h \
    tests/test-utils.h

dist_noinst_DATA += \
    tests/data/H-000-MSG1__-MSG1________-_________-EPI______-200611141200-__ \
    tests/data/H-000-MSG1__-MSG1________-HRV______-000018___-200611141200-C_ \
    tests/data/H-000-MSG1__-MSG1________-_________-PRO______-200611141200-__ \
    tests/data/MSG_Seviri_1_5_Infrared_10_8_channel_20051219_1415.nc

tests_msatlib_test_CPPFLAGS = \
    -I$(top_srcdir)/msat

tests_msatlib_test_LDADD = \
    msat/libmsat.la \
    $(GDAL_LIBS)

tests_msatlib_test_SOURCES = \
    tests/tut-main.cpp \
    tests/test-utils.cpp \
    tests/test-proj.cpp \
    tests/test-facts.cpp

if HRIT
tests_msatlib_test_SOURCES += \
    tests/test-fileaccess.cpp \
    tests/test-dataaccess.cpp
endif

INCLUDES = \
    -DDATA_DIR=\"`pwd`/$(top_srcdir)/tests/data\" \
    -DWORK_DIR=\"`pwd`/$(top_builddir)/tests/work/\"

